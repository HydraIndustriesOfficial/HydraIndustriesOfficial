{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
   "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
   ],
  "automerge": true,
  "automergeType": "branch",
  "dependencyDashboardApproval": true,
  "enabled": true,
   "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "arg0"
    ]
  },
  "gomod": {
    "enabled": true
  },
  "rebaseWhen": "behind-base-branch"

}
